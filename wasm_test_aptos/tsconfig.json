{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "./dist",
    "sourceMap": true,
    "module": "esnext",
    "target": "ES2020",
    "pretty": true
  },
  "include": [
    "src",
    "wrappers",
    "*.ts",
    "**/*.ts",
    "**/*.js"
  ],
  "paths": {
    "@aptos/*": "../..",
  }
}
